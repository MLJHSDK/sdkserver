<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sdkserver.management.mapper.MenuRoleMapper">
    <delete id="deleteMenuByRid" parameterType="long">
        DELETE FROM ml_menu_role WHERE rid=#{rid}
    </delete>
    <insert id="addMenu">
        INSERT INTO ml_menu_role(mid,rid) VALUES
        <foreach collection="mids" item="mid" separator=",">
            (#{mid},#{rid})
        </foreach>
    </insert>
</mapper>